---
import LandingLayout from "../layouts/Landing.astro";
import Prose from "../components/Prose.astro";
import projects from "../data/projects.js";
---

<LandingLayout
    title="Projects"
    subheading="When I'm not making stuff for my day job, I like to build websites, apps, and utilities to help other developers. You can find some of them listed below, and the rest you can find on my GitHub profile."
>
    <Prose>
    <section>
        <ul
            class="space-y-12 list-none !pl-0 divide-y divide-zinc-200 dark:divide-zinc-700 not-prose"
        >
            {
                projects.map((project: any) => {
                    return (
                        <li class="space-y-2 pb-12">
                            <h2 class="font-extrabold tracking-tight text-2xl md:text-4xl">
                                {project.title}
                            </h2>
                            <p>{project.description}</p>
                            <div class="flex items-center gap-4 font-mono">
                                {project.links.map((link: any) => (
                                    <a
                                        href={link.url}
                                        rel="nofollow noreferrer"
                                        target="_blank"
                                        class="text-violet-500 dark:text-violet-400 text-xs md:text-sm"
                                    >
                                        {link.title}
                                    </a>
                                ))}
                            </div>
                        </li>
                    );
                })
            }
        </ul>
    </section>
    </Prose>
</LandingLayout>
